{
    "name": "Craigslist Alert",
    "version": "1.0",
    "description": "Build an Extension!",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
          "48": "images/craigslist.png"
        }
    },
    "options_page": "html/options.html",
    "icons": {
      "48": "images/craigslist.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent",
        "storage",
        "notifications",
        "alarms",
        "https://*/*"
    ],
    "manifest_version": 2
}
