{
    "name": "Craigslist Alert",
    "version": "1.0",
    "description": "Build an Extension!",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
          "48": "icon.png"
        }
    },
    "options_page": "options.html",
    "icons": {
      "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "manifest_version": 2
}
